<p><%= flash[:success] %></p>
<h1>Books</h1>
<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Body</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
  <% @books.each do |book| %>
<tr>
  <td><%= book.title %></td>
  <td><%= book.body %></td>
  
  <td>
    <%= link_to "Show", book_show_path(book.id) %>
  </td>
  <td>
    <%= link_to "Edit", edit_book_path(book.id) %>
  </td>
  <td>
   <%= link_to 'Destroy', destroy_book_path(book), method: :delete, data: { confirm: 'Are you sure?' } %>
  </td>
 
 </tr> 
<% end %>
</tbody>  
</table>

<h1>New book</h1>

<%= form_with model: Book.new do |f| %>

  <% if flash[:alert].present? %>
   <p class="alert"><%= flash[:alert] %></p>
  <% end %>
  
  <h4>title</h4>
  <%= f.text_field :title %>
	
  <h4>body</h4>
  <%= f.text_area :body %>
	<br>
  <%= f.submit 'Create Book' %>
<% end %>