<h1>Editing Book</h1>

<%= form_with model: @Book, url: update_book_path(@book.id), method: :patch do |f| %>

<h4>Title</h4>
<p><%= f.text_field :title %></p>
  
<h4>Body</h4>
<p><%= f.text_area :body %></p>
 
<td>
 <p><%= f.submit 'Update Book' %></p>
</td>
<td>
  <%= link_to "Show", book_show_path(@book.id) %>
</td>
<td>
  <%= link_to "Back", books_path(@book.id) %>
</td>
  
  
<% end %>